@page
@model BecomeFarmerModel
@{
    ViewData["Title"] = "Become a Farmer";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    header {
        background-color: #2e7d32;
        color: white;
        padding: 30px;
        text-align: center;
    }

        header h1 {
            margin: 0;
            font-size: 2.5rem;
        }

        header p {
            margin: 10px 0 0;
            font-size: 1.2rem;
            color: #d7ffd9;
        }

    .container {
        max-width: 600px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .farmer-upgrade-box {
        background: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        text-align: center;
    }

        .farmer-upgrade-box h2 {
            color: #2e7d32;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .farmer-upgrade-box p {
            font-size: 1.1rem;
            color: #555;
            margin-bottom: 30px;
        }

        .farmer-upgrade-box form button {
            background-color: #43a047;
            color: white;
            border: none;
            padding: 12px 30px;
            font-size: 1rem;
            font-weight: 500;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .farmer-upgrade-box form button:hover {
                background-color: #388e3c;
            }
</style>

<header>
    <h1>Become a Farmer</h1>
    <p>Upgrade your account to list and manage agricultural products</p>
</header>

<div class="container">
    <div class="farmer-upgrade-box">
        <h2>Confirm Farmer Upgrade</h2>
        <p>Do you want to become a registered farmer on Agri Energy Connect?</p>
        <form method="post">
            <button type="submit">Yes, Upgrade My Account</button>
        </form>
    </div>
</div>
