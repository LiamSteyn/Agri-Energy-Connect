@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f3f3f3;
        margin: 0;
        padding: 0;
    }

    header {
        background-color: #2e7d32;
        color: white;
        padding: 30px;
        text-align: center;
    }

        header h1 {
            margin: 0;
            font-size: 2.5rem;
        }

    .container {
        max-width: 500px;
        margin: 50px auto;
        padding: 0 20px;
    }

    .login-form {
        background: #ffffff;
        padding: 30px;
        border-radius: 6px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .login-form h2 {
            margin-bottom: 25px;
            font-size: 1.75rem;
            color: #2e7d32;
            text-align: center;
        }

        .login-form label {
            font-size: 1rem;
            color: #555;
            margin-bottom: 5px;
            display: block;
        }

        .login-form input {
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1rem;
        }

        .login-form button {
            background-color: #43a047;
            color: white;
            border: none;
            padding: 12px 20px;
            font-size: 1.1rem;
            border-radius: 4px;
            cursor: pointer;
        }

            .login-form button:hover {
                background-color: #388e3c;
            }

        .login-form .form-footer {
            text-align: center;
            margin-top: 15px;
            font-size: 0.9rem;
        }

            .login-form .form-footer a {
                color: #388e3c;
                text-decoration: none;
            }

        .login-form .error {
            color: red;
            text-align: center;
            margin-bottom: 15px;
        }
</style>

<header>
    <h1>Welcome Back</h1>
    <p>Login to your account to continue.</p>
</header>

<div class="container">
    <div class="login-form">
        <h2>Login</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error">@Model.ErrorMessage</div>
        }

        <form method="post">
            <div>
                <label for="Email">Email</label>
                <input type="email" id="Email" name="Email" value="@Model.Email" required placeholder="Enter your registered email" />
            </div>

            <div>
                <label for="Password">Password</label>
                <input type="password" id="Password" name="Password" required placeholder="Enter your password" />
            </div>

            <div>
                <button type="submit">Login</button>
            </div>
        </form>

        <div class="form-footer">
            <p>Don't have an account? <a href="/Register">Register here</a></p>
        </div>
    </div>
</div>
